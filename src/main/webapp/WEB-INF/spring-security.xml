    <!--<user name="admin" password="{noop}123" authorities="ROLE_USER, ROLE_ADMIN"/>-->
    <!--<user name="manager" password="{noop}123" authorities="ROLE_USER, ROLE_MANAGER"/>-->
    <!--</user-service>-->
